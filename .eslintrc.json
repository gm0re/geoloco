{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": "off",
    "semi": "off",
    "react/jsx-filename-extension": "off",
    "react/function-component-definition": [
      "error",
      { "namedComponents": "arrow-function" }
    ],
    "import/prefer-default-export": "off",
    "no-unused-vars": "warn"
  }
}
